<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login_SingUpPage">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.Appbar">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <EditText
                android:id="@+id/sign_idInput"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_alignStart="@id/sign_passwordInput"
                android:layout_marginTop="130dp"
                android:hint="아이디" />

            <Button
                android:id="@+id/sign_iddubButton"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginTop="130dp"
                android:layout_toRightOf="@id/sign_idInput"
                android:onClick="onClickdbCkButton"
                android:text="중복 확인" />

            <EditText
                android:id="@+id/sign_passwordInput"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_below="@+id/sign_idInput"
                android:layout_centerHorizontal="true"
                android:hint="비밀번호" />

            <EditText
                android:id="@+id/sign_passwordInputCheck"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_below="@+id/sign_passwordInput"
                android:layout_centerHorizontal="true"
                android:hint="비밀번호 확인" />

            <EditText
                android:id="@+id/sign_nameInput"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_below="@+id/sign_passwordInputCheck"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:hint="이름" />

            <EditText
                android:id="@+id/sign_nknameInput"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_below="@+id/sign_nameInput"
                android:layout_alignStart="@id/sign_emailInput"
                android:hint="닉네임" />

            <Button
                android:id="@+id/sign_nkdubButton"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_below="@+id/sign_nameInput"
                android:layout_toRightOf="@id/sign_nknameInput"
                android:onClick="onClickdbCkButton"
                android:text="중복 확인" />

            <EditText
                android:id="@+id/sign_emailInput"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_below="@+id/sign_nknameInput"
                android:layout_centerHorizontal="true"
                android:hint="Email" />

            <EditText
                android:id="@+id/sign_phonnumInput"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_below="@+id/sign_emailInput"
                android:layout_centerHorizontal="true"
                android:hint="phon number" />


            <EditText
                android:id="@+id/sign_keyInput"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_below="@+id/sign_phonnumInput"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:hint="key 번호"
                android:layout_marginBottom="30dp"/>

            <Button
                android:id="@+id/loginButton"
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:layout_below="@+id/sign_keyInput"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="80dp"
                android:layout_toStartOf="@+id/signupButton"
                android:onClick="onClickLoginButton"
                android:text="Log in"
                android:textAllCaps="false" />



        </RelativeLayout>
    </ScrollView>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>